{% for variable in variables %}
    <tr data-id="{{ variable.id }}">

        <td>{{ variable.namespace }}</td>
        <td>{{ variable.name }}</td>
        <td>{{ variable.type }}</td>
        <td>{% if variable.type=="color" %}<span class="variable_preview_box_small" style="background-color:{{ variable.value }}"></span>{% endif %}{{ variable.value }}</td>
        <td>
            <span class="variable-action-container">
                {% if variable.editable %}
                    <a href="/backend/variables/id/{{ variable.id }}/edit">
                        <div class="btn btn-warning">
                            <span class="icon icon-edit"></span>
                        </div>
                    </a>
                    <div class="btn btn-danger" data-link-ajax="/backend/variables/id/{{ variable.id }}/delete">
                       <span class="icon icon-delete"></span>
                    </div>
                {% endif %}
            </span>
        </td>

    </tr>
{% endfor %}


