<?xml version="1.0" encoding="UTF-8" ?>

<controllerlist>

    <controller class="webu\modules\Index\Controller\Index" name="Index">
        <actions>

            <action id="module.index.index.index">
                <method>index</method>
                <url>/</url>
            </action>

            <action id="module.index.index.impress">
                <method>impress</method>
                <url>/impressum</url>
            </action>

            <action id="module.index.index.contact">
                <method>contact</method>
                <url>/contact</url>
            </action>

        </actions>
    </controller>


    <controller class="webu\modules\Index\Controller\Error" name="Error">
        <actions>

            <action id="module.index.error.error404">
                <method>error404</method>
                <url>/404</url>
            </action>

        </actions>
    </controller>


    <controller class="webu\modules\Index\Controller\Projects" name="Projects">
        <actions>

            <action id="module.index.projects.list">
                <method>list</method>
                <url>/projects</url>
            </action>
            <action id="module.index.projects.list.page">
                <method>list</method>
                <url>/projects/p/{page}</url>
            </action>

            <action id="module.index.projects.detail">
                <method>list</method>
                <url>/projects/detail/{id}</url>
            </action>

        </actions>
    </controller>


    <controller class="webu\modules\Index\Controller\Api" name="Api">
        <actions>

            <action id="module.index.api.contactform">
                <method>contactFormSubmit</method>
                <url>/contact/submitform</url>
            </action>

        </actions>
    </controller>

</controllerlist>