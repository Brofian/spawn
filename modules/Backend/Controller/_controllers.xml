<?xml version="1.0" encoding="UTF-8" ?>

<controllerlist>

    <controller class="webu\modules\Backend\Controller\Index" name="Index">
        <actions>

            <action id="module.backend.index.index">
                <method>index</method>
                <url>/backend</url>
            </action>

            <action id="module.backend.projects.index">
                <method>index</method>
                <url>/backend/projects</url>
            </action>

        </actions>
    </controller>

    <controller class="webu\modules\Backend\Controller\Login" name="Login">
        <actions>

            <action id="module.backend.login.index">
                <method>index</method>
                <url>/backend/login</url>
            </action>

            <action id="module.backend.login.trylogin">
                <method>tryLogin</method>
                <url>/backend/api/login</url>
            </action>

            <action id="module.backend.login.logout">
                <method>logout</method>
                <url>/backend/logout</url>
            </action>

        </actions>
    </controller>



</controllerlist>